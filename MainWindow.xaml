<Window x:Class="Manekineko.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manekineko"
        Width="260" Height="320"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ResizeMode="NoResize"
        ShowInTaskbar="True"
        Loaded="Window_Loaded"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <!-- Paw waving animation -->
		<Storyboard x:Key="PawWave">
            <DoubleAnimation
                Storyboard.TargetName="PawGroup"
                Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(RotateTransform.Angle)"
                From="-15" To="20" Duration="0:0:1.5" AutoReverse="True" RepeatBehavior="Forever">
                <DoubleAnimation.EasingFunction>
                    <SineEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>

            <DoubleAnimation
                Storyboard.TargetName="PawGroup"
                Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(SkewTransform.AngleX)"
                From="-5" To="5" Duration="0:0:1.5" AutoReverse="True" RepeatBehavior="Forever">
                <DoubleAnimation.EasingFunction>
                    <SineEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            
            <DoubleAnimation
                Storyboard.TargetName="PawGroup"
                Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(ScaleTransform.ScaleX)"
                From="0.85" To="1" Duration="0:0:1.5" AutoReverse="True" RepeatBehavior="Forever">
                <DoubleAnimation.EasingFunction>
                    <SineEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- breathing animation -->
       <Storyboard x:Key="Breathing">
            <DoubleAnimation
                Storyboard.TargetName="BodyGroup"
                Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                From="1.0" To="2.02" Duration="0:0:3" AutoReverse="True" RepeatBehavior="Forever">
                <DoubleAnimation.EasingFunction>
                    <SineEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>

            <DoubleAnimation
                Storyboard.TargetName="BodyGroup"
                Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                From="1.0" To="1.915" Duration="0:0:3" AutoReverse="True" RepeatBehavior="Forever">
                <DoubleAnimation.EasingFunction>
                    <SineEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
		
        <!-- Brushes -->
        <RadialGradientBrush x:Key="BodyGradient" GradientOrigin="0.4,0.3">
            <GradientStop Color="#FFFEFAF5" Offset="0"/>
            <GradientStop Color="#FFF5E6D3" Offset="1"/>
        </RadialGradientBrush>
        
        <RadialGradientBrush x:Key="HeadGradient" GradientOrigin="0.4,0.2">
            <GradientStop Color="#FFFFFFFF" Offset="0"/>
            <GradientStop Color="#FFF8F0E8" Offset="1"/>
        </RadialGradientBrush>

        <LinearGradientBrush x:Key="CollarGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#FFFF5252" Offset="0"/>
            <GradientStop Color="#FFD32F2F" Offset="1"/>
        </LinearGradientBrush>

        <RadialGradientBrush x:Key="CoinGradient" GradientOrigin="0.3,0.2">
            <GradientStop Color="#FFFFF176" Offset="0"/>
            <GradientStop Color="#FFFBC02D" Offset="1"/>
        </RadialGradientBrush>

        <RadialGradientBrush x:Key="BellGradient" GradientOrigin="0.3,0.2">
            <GradientStop Color="#FFFFF9C4" Offset="0"/>
            <GradientStop Color="#FFFDD835" Offset="1"/>
        </RadialGradientBrush>
    </Window.Resources>

    <!-- Main container -->
    <Grid>
        <!-- Softer drop shadow -->
        <Canvas>
            <Ellipse Width="180" Height="32" Canvas.Left="40" Canvas.Top="280" 
                     Fill="#22000000" RenderOptions.EdgeMode="Aliased">
                <Ellipse.Effect>
                    <BlurEffect Radius="8"/>
                </Ellipse.Effect>
            </Ellipse>
        </Canvas>

        <!-- Cat canvas -->
        <Canvas Width="240" Height="300">
		
            <!-- Body with breathing animation -->
            <Grid x:Name="BodyGroup" Canvas.Left="40" Canvas.Top="130" RenderTransformOrigin="0.5,0.5">
                <Grid.RenderTransform>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Grid.RenderTransform>
                
                <!-- Main body -->
                <Ellipse Width="160" Height="130" Fill="{StaticResource BodyGradient}" 
                         Stroke="#FF3A3A3A" StrokeThickness="2.5"/>
                <!-- Belly highlight -->
                <Ellipse Width="100" Height="80" Canvas.Left="30" Canvas.Top="32" 
                         Fill="#FFFFFFFF" Opacity="0.7"/>
            </Grid>
			
			<!-- Tail -->
			<Path Stroke="#FF3A3A3A" StrokeThickness="2.5" Fill="{StaticResource BodyGradient}"
                  Data="M 45,180 Q 15,160 20,120 Q 25,100 40,110 Q 50,120 45,140 Q 42,160 45,180"/>


            <!-- Head -->
            <Ellipse Width="130" Height="110" Canvas.Left="55" Canvas.Top="30" 
                     Fill="{StaticResource HeadGradient}" Stroke="#FF3A3A3A" StrokeThickness="2.5"/>
            
            <!-- Ears -->
            <Polygon Points="70,50 85,18 100,50" Fill="{StaticResource HeadGradient}" 
                     Stroke="#FF3A3A3A" StrokeThickness="2.5"/>
            <Polygon Points="140,50 155,18 170,50" Fill="{StaticResource HeadGradient}" 
                     Stroke="#FF3A3A3A" StrokeThickness="2.5"/>
            <Polygon Points="75,48 85,28 95,48" Fill="#FFFFC1CC"/>
            <Polygon Points="145,48 155,28 165,48" Fill="#FFFFC1CC"/>

            <!-- Eyes  -->
            <Ellipse Width="14" Height="16" Canvas.Left="90" Canvas.Top="68" Fill="#FF2A2A2A"/>
            <Ellipse Width="14" Height="16" Canvas.Left="136" Canvas.Top="68" Fill="#FF2A2A2A"/>
            <Ellipse Width="4" Height="5" Canvas.Left="92" Canvas.Top="70" Fill="#FFFFFFFF"/>
            <Ellipse Width="4" Height="5" Canvas.Left="138" Canvas.Top="70" Fill="#FFFFFFFF"/>

            <!-- Nose -->
            <Polygon Points="120,90 114,98 126,98" Fill="#FFFF7A85" Stroke="#FF3A3A3A" StrokeThickness="1"/>

            <!-- Mouth -->
            <Path Stroke="#FF3A3A3A" StrokeThickness="2" StrokeStartLineCap="Round" StrokeEndLineCap="Round"
                  Data="M 120,100 L 120,105 M 115,108 Q 120,112 125,108"/>

            <!-- cheek  -->
            <Ellipse Width="18" Height="12" Canvas.Left="65" Canvas.Top="88" Fill="#FFFFB3BA" Opacity="0.6"/>
            <Ellipse Width="18" Height="12" Canvas.Left="157" Canvas.Top="88" Fill="#FFFFB3BA" Opacity="0.6"/>


            <!-- Whiskers -->
            <Line X1="75" Y1="88" X2="50" Y2="85" Stroke="#FF3A3A3A" StrokeThickness="1.5"/>
            <Line X1="75" Y1="95" X2="50" Y2="95" Stroke="#FF3A3A3A" StrokeThickness="1.5"/>
            <Line X1="75" Y1="102" X2="50" Y2="105" Stroke="#FF3A3A3A" StrokeThickness="1.5"/>
            <Line X1="165" Y1="88" X2="190" Y2="85" Stroke="#FF3A3A3A" StrokeThickness="1.5"/>
            <Line X1="165" Y1="95" X2="190" Y2="95" Stroke="#FF3A3A3A" StrokeThickness="1.5"/>
            <Line X1="165" Y1="102" X2="190" Y2="105" Stroke="#FF3A3A3A" StrokeThickness="1.5"/>

            <!-- collar -->
            <Rectangle Width="100" Height="16" Canvas.Left="70" Canvas.Top="130" 
                       Fill="{StaticResource CollarGradient}" RadiusX="8" RadiusY="8"/>
            <Rectangle Width="100" Height="4" Canvas.Left="70" Canvas.Top="130" 
                       Fill="#66FFFFFF" RadiusX="8" RadiusY="8"/>

            <!-- Bell -->
            <Ellipse Width="20" Height="20" Canvas.Left="110" Canvas.Top="140" 
                     Fill="{StaticResource BellGradient}" Stroke="#FF3A3A3A" StrokeThickness="1.5"/>
            <Ellipse Width="4" Height="4" Canvas.Left="118" Canvas.Top="148" Fill="#FF3A3A3A"/>
            <Ellipse Width="6" Height="6" Canvas.Left="113" Canvas.Top="143" Fill="#66FFFFFF"/>


            <!-- Left paw -->
            <Ellipse Width="35" Height="28" Canvas.Left="70" Canvas.Top="210" 
                     Fill="#FFFFFFFF" Stroke="#FF3A3A3A" StrokeThickness="2"/>
            <Ellipse Width="4" Height="4" Canvas.Left="78" Canvas.Top="222" Fill="#FFFF7A85"/>
            <Ellipse Width="4" Height="4" Canvas.Left="86" Canvas.Top="218" Fill="#FFFF7A85"/>
            <Ellipse Width="4" Height="4" Canvas.Left="94" Canvas.Top="222" Fill="#FFFF7A85"/>

            <!-- Right paw -->
            <Ellipse Width="35" Height="28" Canvas.Left="140" Canvas.Top="210" 
                     Fill="#FFFFFFFF" Stroke="#FF3A3A3A" StrokeThickness="2"/>
            <Ellipse Width="4" Height="4" Canvas.Left="148" Canvas.Top="222" Fill="#FFFF7A85"/>
            <Ellipse Width="4" Height="4" Canvas.Left="156" Canvas.Top="218" Fill="#FFFF7A85"/>
            <Ellipse Width="4" Height="4" Canvas.Left="164" Canvas.Top="222" Fill="#FFFF7A85"/>


          <!-- Right waving paw group with better positioning -->
            <Grid x:Name="PawGroup" Canvas.Left="150" Canvas.Top="90" RenderTransformOrigin="0.15,0.25">
                <Grid.RenderTransform>
                    <TransformGroup>
                        <RotateTransform Angle="0"/>
                        <TranslateTransform X="0" Y="0"/>
                        <SkewTransform AngleX="0" AngleY="0"/>
                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                    </TransformGroup>
                </Grid.RenderTransform>

                <!-- Upper arm with gradient -->
                <Rectangle Width="22" Height="55" RadiusX="11" RadiusY="11"
                           Fill="{StaticResource HeadGradient}" Stroke="#FF3A3A3A" StrokeThickness="2"/>
                
                <!-- Paw -->
                <Ellipse Width="38" Height="32" Canvas.Left="-8" Canvas.Top="45"
                         Fill="#FFFFFFFF" Stroke="#FF3A3A3A" StrokeThickness="2"/>
                
                <!-- Paw pads with better colors -->
                <Ellipse Width="5" Height="5" Canvas.Left="5" Canvas.Top="56" Fill="#FFFF7A85"/>
                <Ellipse Width="5" Height="5" Canvas.Left="13" Canvas.Top="58" Fill="#FFFF7A85"/>
                <Ellipse Width="5" Height="5" Canvas.Left="21" Canvas.Top="56" Fill="#FFFF7A85"/>
                
                <!-- Main paw pad -->
                <Ellipse Width="8" Height="6" Canvas.Left="11" Canvas.Top="63" Fill="#FFFF7A85"/>
            </Grid>
						
        </Canvas>
    </Grid>
</Window>